{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "inlineSourceMap": true,
    "inlineSources": true,
    "sourceMap": false,
    "allowJs": true,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./src/app/*"],
      "@shared/*": ["./src/app/shared/*"]
    }
  },
  "include": ["src/**/*", "**/*.env"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
